@using RestrantApplication.Core.ViewModels.Review
@model UpdateReviewViewModel

@{
    ViewData["Title"] = "UpdateReview";
}

<div class="container">
    <main role="main" class="pb-3">
        <br /><br />

<h1>Update Review</h1>


<div class="row">
    <div class="col-md-4">
        <form asp-action="UpdateReview" asp-route-UserID="@Model.UserID" asp-route-ID="@Model.ID">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
            <label asp-for="Comment" class="control-label"></label>
            <textarea asp-for="Comment" class="form-control"></textarea>
            <span asp-validation-for="Comment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
        <a asp-action="GetAllReviewsForCurrentUser" asp-controller="Review">Back to List</a>
</div>
    </main>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
