@using RestrantApplication.Core.ViewModels.Product
@model RestrantApplication.MVC.Helper.Pagination<ProductViewModel>
@{
    ViewData["Title"] = "Menu";
}
<style>
    /* Edit Button Styling */
    .edit-btn {
        position: absolute;
        top: 10px;
        left: 10px;
        width: 24px;
        height: 24px;
        background: #3498db;
        border-radius: 50%;
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        text-decoration: none;
        transition: all 0.3s ease;
        z-index: 10;
        opacity: 0;
    }

        .edit-btn:hover {
            background: #2980b9;
            transform: scale(1.1);
        }

    /* Delete Button Styling */
    .delete-btn {
        position: absolute;
        top: 10px;
        right: 10px;
        width: 24px;
        height: 24px;
        background: #ff4444;
        border-radius: 50%;
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        text-decoration: none;
        font-weight: bold;
        font-size: 18px;
        line-height: 1;
        transition: all 0.3s ease;
        z-index: 10;
        opacity: 0;
    }

        .delete-btn:hover {
            background: #cc0000;
            transform: scale(1.1);
        }

    .box:hover .edit-btn,
    .box:hover .delete-btn {
        opacity: 1;
    }

    /* Cart Icon Styling */
    .cart-icon {
        width: 30px;
        height: 30px;
        fill: #2c3e50;
        transition: all 0.3s ease;
    }

    .cart-link:hover .cart-icon {
        fill: #3498db;
        transform: scale(1.1);
    }
</style>
<section class="food_section layout_padding">
    <div class="container">
        <div class="heading_container heading_center">
            <h2>
                Our Menu
            </h2>
        </div>
        <ul class="filters_menu">
            <li class="active" data-filter="*">All</li>
            @foreach (var category in ViewBag.Categories)
            {
                <li data-filter=".@category.Name.ToLower()">@category.Name</li>
            }
        </ul>
        <div class="filters-content">
            <div class="row grid">
                @foreach (var product in Model.Data)
                {
                    <div class="col-sm-6 col-lg-4 all @product.category.Name.ToLower()">
                        <div class="box">
                            @if (User.IsInRole("Manger"))
                            {
                                <!-- Edit Button -->
                                <a asp-controller="Product"
                                   asp-action="UpdateProduct"
                                   asp-route-id="@product.ID"
                                   class="edit-btn"
                                   title="Edit Product">
                                    <i class="fas fa-edit"></i>
                                </a>

                                <!-- Delete Button -->
                                <a asp-controller="Product"
                                   asp-action="DeleteProduct"
                                   asp-route-id="@product.ID"
                                   class="delete-btn"
                                   onclick="return confirm('Are you sure you want to delete this item?')"
                                   title="Delete Product">
                                    <span class="delete-icon">×</span>
                                </a>
                            }
                            <div>
                                <div class="img-box">
                                    <img src="/images/ProductImages/@product.Photo.PhotoName" alt="">
                                </div>
                                <div class="detail-box">
                                    <h5>
                                        @product.Name
                                    </h5>
                                    <p>
                                        @product.Description
                                    </p>
                                    <div class="options">
                                        <h6>
                                            $@product.Prise
                                        </h6>
                                        <a asp-action="AddItemToCart" asp-controller="Cart" asp-route-ProductID="@product.ID">

                                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 456 456" class="cart-icon">

                                                <path d="M439 85h-323l-5-34c-3-23-22-40-45-40H20C9 11 0 20 0 31s9 20 20 20h42c3 0 5 2 5 5l32 216c4 27 28 48 55 48h213c27 0 50-19 55-45l33-166c2-13-5-24-16-26z" />

                                                <circle cx="346" cy="392" r="53" />

                                                <circle cx="215" cy="390" r="52" />
                                            </svg>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>

        <div class="btn-box">
            @if (Model.TotalCount > (Model.PageNumber * Model.PageSize))
            {
                <a href="#" id="loadMore"
                   data-current-page="@Model.PageNumber"
                   data-page-size="@Model.PageSize"
                   data-total-items="@Model.TotalCount">
                    View More
                </a>
            }
        </div>
</section>
<!-- end food section -->

<style>
    .box {
        transition: transform 0.3s, box-shadow 0.3s;
        border-radius: 15px;
        overflow: hidden;
        position: relative;
    }

        .box:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.1);
        }



    /* Responsive Design */
    @@media (max-width: 576px) {
        .edit-btn, .delete-btn {
            width: 22px;
            height: 22px;
        }

            .edit-btn i {
                font-size: 12px;
            }

        .delete-icon {
            font-size: 16px;
        }
    }
</style>


<!-- jQery -->
<script src="/js/jquery-3.4.1.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#loadMore').click(function (e) {
                e.preventDefault();
                var button = $(this);
                var nextPage = parseInt(button.data('current-page')) + 1;
                var pageSize = parseInt(button.data('page-size'));

                button.html('<i class="fas fa-spinner fa-spin"></i> Loading...');

                $.ajax({
                    url: '/Product/Menu',
                    type: 'GET',
                    data: {
                        pageNumber: nextPage,
                        pageSize: pageSize
                    },
                    success: function (data) {
                        if (data && data.trim() !== '') {
                            var $newItems = $(data).hide();
                            $('.row.grid').append($newItems);
                            $newItems.fadeIn(500);

                            button.data('current-page', nextPage);

                            if (typeof $('.grid').isotope === 'function') {
                                $('.grid').isotope('appended', $newItems);
                            }

                            $('html, body').animate({
                                scrollTop: $newItems.last().offset().top - 100
                            }, 500);

                            if ((nextPage * pageSize) >= parseInt(button.data('total-items'))) {
                                button.hide();
                            }
                        } else {
                            button.replaceWith('<p class="text-muted">No more products</p>');
                        }
                    },
                    error: function (xhr, status, error) {
                        console.error("Error:", error);
                        alert("Error loading more products. Please try again.");
                    },
                    complete: function () {
                        button.text('View More');
                    }
                });
            });
        });
    </script>


