@using RestrantApplication.Core.ViewModels.Identity
@model UpdateRoleViewModel

@{
    ViewData["Title"] = "UpdateRole";
}


<div class="container">
    <main role="main" class="pb-3">
        <br /><br />

        <h1>UpdateRole</h1>
        <div class="row">
            <div class="col-md-4">
                <form asp-action="UpdateRole" asp-route-ID="@Model.ID">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="RoleName" class="control-label"></label>
                        <input asp-for="RoleName" class="form-control" />
                        <span asp-validation-for="RoleName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Update Role" class="btn btn-primary" />
                    </div><br /> <br />
                </form>
            </div>
        </div>
    </main>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
