@using RestrantApplication.Core.ViewModels.Identity
@model LoginViewModel

@{
    ViewData["Title"] = "Login";
}
<div class="container">
    <main role="main" class="pb-3">
        <br /><br />

        <h1>Login</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Login">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserName" class="control-label"></label>
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="RemeberMe" /> @Html.DisplayNameFor(model => model.RemeberMe)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
        </form>
                <div>
                    <p>
                        If you don't have an account, click
                        <a asp-controller="Account" asp-action="Register">Register</a> to create one.
                    </p>
                </div>
    </div>
</div>
    </main>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
