@using RestrantApplication.Core.ViewModels.Identity
@model UpdateAddressViewModel

@{
    ViewData["Title"] = "UpdateAddress";
}


<div class="container">
    <main role="main" class="pb-3">
        <br /><br />
        <h1>UpdateAddress</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="UpdateAddress">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="orderType" class="control-label"> </label>
                <br />
                <select asp-for="orderType" class="form-control">
                    <option selected="selected" >Select Type of Order</option>
                    <option>@RestrantApplication.Core.Models.Order.OrderType.Delivery</option>
                    <option>@RestrantApplication.Core.Models.Order.OrderType.Restrant</option>
                </select>
                <span asp-validation-for="orderType" class="text-danger"></span>
            </div>
            <br />
                    <br />
            <div class="form-group">
                <input type="submit" value="Save and Confirm Order" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="Cart">Back to Cart</a>
</div>
    </main>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
