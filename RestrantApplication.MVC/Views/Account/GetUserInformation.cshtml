@model RestrantApplication.Core.Models.Identity.ApplicationUser
@{
    ViewData["Title"] = "User Profile";
}

<div class="container">
    <main role="main" class="pb-3">
        <!-- Profile Header -->
        <div class="profile-header text-center mb-5">
            <br />
            <h1 class="display-4">User Profile</h1>
            <br />
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger">
                    @TempData["Error"]
                </div>
            }
        </div>

        <!-- Profile Container -->
        <div class="profile-card shadow-lg">
            <!-- Profile Image Section -->
            <div class="profile-image-container">
                <div class="profile-image-wrapper">
                    <div class="profile-image"
                         style="background-image: url('/images/UserPicturs/@ViewBag.PictureName')">
                    </div>
                </div>
            </div>

            <!-- User Information -->
            <div class="user-info-section">
                <div class="info-item">
                    <span class="info-label">Full Name:</span>
                    <span class="info-value">@Model.UserName</span>
                </div>

                <div class="info-item">
                    <span class="info-label">Address:</span>
                    <span class="info-value">@Model.Address</span>
                </div>

                <div class="info-item">
                    <span class="info-label">Phone:</span>
                    <span class="info-value">@Model.PhoneNumber</span>
                </div>

                <div class="info-item">
                    <span class="info-label">Email:</span>
                    <span class="info-value">@Model.Email</span>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="profile-actions">
                <a asp-action="Logout" asp-controller="Account" class="btn btn-logout">
                    <i class="fas fa-sign-out-alt"></i>
                    Logout
                </a>
                <button class="btn btn-danger" onclick="confirmDelete()">
                    <i class="fas fa-trash-alt"></i>
                    Delete Account
                </button>
            </div>
        </div>
    </main>
</div>

<br />
<br />

@section Styles {
    <style>
        :root {
            --primary-color: #2c3e50;
            --accent-color: #3498db;
            --text-dark: #2c3e50;
            --text-light: #ecf0f1;
        }

        .profile-card {
            max-width: 800px;
            margin: 0 auto;
            background: #ffffff;
            border-radius: 20px;
            padding: 40px;
            position: relative;
        }

        .profile-image-container {
            position: relative;
            width: 200px;
            height: 200px;
            margin: -100px auto 30px;
        }

        .profile-image-wrapper {
            width: 100%;
            height: 100%;
            border: 4px solid var(--primary-color);
            border-radius: 50%;
            padding: 8px;
            box-shadow: 0 8px 30px rgba(0,0,0,0.12);
            background: linear-gradient(45deg, #f8f9fa, #ffffff);
        }

        .profile-image {
            width: 100%;
            height: 100%;
            border-radius: 50%;
            background-size: cover;
            background-position: center center;
            transition: transform 0.3s ease;
            position: relative;
            overflow: hidden;
        }

            .profile-image:hover {
                transform: scale(1.02);
            }

        .user-info-section {
            margin: 2rem 0;
        }

        .info-item {
            margin: 1.5rem 0;
            padding: 1.2rem;
            background: #f8f9fa;
            border-radius: 12px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .info-label {
            font-weight: 600;
            color: var(--primary-color);
            font-size: 1rem;
        }

        .info-value {
            color: #7f8c8d;
            font-size: 1.1rem;
        }

        .profile-actions {
            display: flex;
            gap: 1.5rem;
            justify-content: center;
            margin-top: 2rem;
        }

        .btn-logout {
            background: var(--primary-color);
            color: var(--text-light);
            padding: 12px 35px;
            border-radius: 30px;
            transition: all 0.3s ease;
        }

            .btn-logout:hover {
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(44,62,80,0.2);
            }

        @@media (max-width: 768px) {
            .profile-card {
                padding: 25px;
            }

            .profile-image-container {
                width: 150px;
                height: 150px;
                margin: -75px auto 20px;
            }

            .info-item {
                flex-direction: column;
                align-items: flex-start;
                gap: 0.5rem;
            }

            .profile-actions {
                flex-direction: column;
            }
        }
    </style>
}

@section Scripts {
    <script>
        // Delete confirmation
        function confirmDelete() {
            if (confirm('Are you sure you want to permanently delete your account?\nThis action cannot be undone!')) {
                window.location.href = '@Url.Action("DeleteAccount", "Account")';
            }
        }
    </script>
}
