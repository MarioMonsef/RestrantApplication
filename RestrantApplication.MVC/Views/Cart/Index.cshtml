@model List<RestrantApplication.Core.ViewModels.Cart.CartItemsViewModel>
@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <main role="main" class="pb-3">
        <br /><br />
        <h1>Index</h1>
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger">
                @TempData["Error"]
            </div>
        }
        <br />
        @if (Model.Any())
        {
            <table class="table table-hover table-bordered text-center">
                <thead>
                    <tr>
                        <th>Photo</th>
                        <th>Name</th>
                        <th>Price</th>
                        <th>Quantity</th>
                        <th>Total Price</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td><img style="height:80px" src="/images/ProductImages/@item.Product.Photo.PhotoName" alt=""></td>
                        <td>@item.Product.Name</td>
                        <td>@item.Product.Prise</td>
                        <td>@item.Quantity</td>
                        <td>@item.TotalAmount</td>
                        <td><a asp-action="RemoveItemInCart" asp-controller="Cart" asp-route-CartItemID="@item.ID">Remove This Item</a></td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="4"></td> 
                    <th class="text-end">Total Amount :</th>
                    <td class="text-start">@Model.Sum(item => item.TotalAmount)</td>
                </tr>
            </tfoot>
            </table>
            <a class="btn btn-primary" asp-action="UpdateAddress" asp-controller="Account">Next</a>
            <br />
            <br />
        }
        else
        {
            
        <h4>The Cart is Empty Please Add Items</h4>
        
        }
        <a class="btn btn-primary" asp-action="Menu" asp-controller="Product">ADD Item in Cart</a>
    </main>
</div>
<br />
<br />