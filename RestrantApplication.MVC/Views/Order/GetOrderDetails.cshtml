@model RestrantApplication.Core.Models.Order.Order
@{
    ViewData["Title"] = "GetOrderDetails";
}


<div class="container">
    <main role="main" class="pb-3">
        <br /><br />
        <h1>GetOrderDetails</h1>
        <br />

            <table class="table table-hover table-bordered text-center">
                <thead>
                    <tr>

                        <th>Photo</th>
                        <th>Product Name</th>
                        <th>Prise One Piece</th>
                        <th>Quantity</th>
                        <th>finaly price product</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in @Model.OrderItems){
                        <tr>
                        <td><img style="height:80px" src="/images/ProductImages/@item.Product.Photo.PhotoName" alt=""></td>
                        <td>@item.Product.Name</td>
                        <td>@item.PriseAtOrder</td>
                        <td>@item.Quantity</td>
                        <td>@item.TotalAmount</td>
                        </tr>
                    }
                </tbody>
            <tfoot>
                <tr>
                    <td colspan="3"></td>
                    <th class="text-end">Total Amount :</th>
                    <td class="text-start">@Model.TotalAmount</td>
                </tr>
            </tfoot>
        </table>
            <br />
            <br />
    </main>
</div>